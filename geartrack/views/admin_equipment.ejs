<%- include('layout', { body: `
  <h1>Manage Equipment</h1>
  <p><a class="btn" href="/admin/equipment/new">+ Add Equipment</a></p>

  <table>
    <thead>
      <tr>
        <th>Name</th><th>Category</th><th>Serial</th><th>Status</th><th>Condition</th><th>Actions</th>
      </tr>
    </thead>
    <tbody>
      ${items.map(i => `
        <tr>
          <td>${i.name}</td>
          <td>${i.category}</td>
          <td>${i.serial}</td>
          <td><span class="${i.status === 'available' ? 'pill ok' : 'pill warn'}">${i.status}</span></td>
          <td>${i.condition}</td>
          <td>
            <a href="/admin/equipment/${i.id}/edit">Edit</a>
            <form method="POST" action="/admin/equipment/${i.id}/delete" class="inline" onsubmit="return confirm('Delete this item?');">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      `).join('')}
    </tbody>
  </table>

  <p class="muted">Note: You cannot delete equipment that is currently checked out.</p>
` }) %>